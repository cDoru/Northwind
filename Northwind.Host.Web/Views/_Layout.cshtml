                                <th>Contact Name</th>
                                <th>Company Name</th>
                                <th>Company Title</th>
                            </tr>
                        </thead>                 
                        <tbody>       
                        {{#each model}}
                            <tr>
                                <td>
                                    {{#link-to 'customer' this}}
                                        {{id}}
                                    {{/link-to}}
                                </td>
                                <td>{{contactName}}</td>
                                <td>{{companyName}}</td>
                                <td>{{companyTitle}}</td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
                <div class="col-md-5">
                    {{outlet}}
                </div>        
            </div>
        </div>
    </script>    

